{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "types": ["jest", "@testing-library/jest-dom"],
  "include": [
    "./webpack.config.ts",
    "src",
    "./config",
    "./config/jest"
  ],
  "exclude": ["node_modules"]
}